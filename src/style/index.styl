@import "common/common.styl"
@import "common/footer.styl"

a
    text-decoration none
    color black

a.btn
    display: inline-block
    text-decoration: none
    text-align: center

.swiper-container
    width: 18.75rem;
    height: 8.7rem;
    img
        width 100%
        height 100%

    .swiper-pagination.swiper-pagination-bullets
        bottom: px(4)
        .swiper-pagination-bullet.swiper-pagination-bullet-active
            background white

$top = px(10)
$width = px(100)
.view-index
    position: relative
    width 100%
    padding-bottom px(60)

.section
    font-size px(14)
    text-align: center;

    > p
        width: 18.75rem;
        height: px(24)
        line-height: px(24)
        font-size px(14)
        text-align center
        color: rgba(255, 255, 255, 1);
        background-color: rgba(0, 0, 0, 1);

    h2
        margin $top auto 0
        padding: px(10)
        width: px(292);
        font-size: 0.7rem;
        color rgba(0, 0, 0, 1)
        text-align center
        font-weight bold

.vote-info
    margin()
    width: 17.25rem;

    div
        display: flex
        width: 100%
        height 3.25rem

        padding 0.3rem 0 0.25rem
        background: rgba(0, 186, 173, 1)

        div
            width: 33.333%
            height: 2.1rem
            line-height 1.0rem
            overflow hidden

            color: rgba(255, 255, 255, 1);
    > p.info-time
        background: white
        height 1.5rem
        line-height 1.5rem
        i
            color: rgba(153, 153, 153, 1)
            font-size px(24)
        span
            color: rgba(212, 48, 48, 1)

.line-name
    margin()
    width: 9.25rem;
    height: 1.5rem;
    margin-top 0.4rem
    color: rgba(255, 255, 255, 1);
    background-color: rgba(0, 186, 173, 1);
    border-radius: 0.3rem;
    font-size: 0.7rem;
    line-height: 1.5rem;
    text-align: center;
    a
        color white

.activity
    margin()
    margin-top $top
    padding 0.3rem 1.2rem
    overflow hidden
    width: 17.25rem;
    color: rgba(80, 80, 80, 1);
    background-color: rgba(255, 255, 255, 1);
    p
        height: px(22)
        line-height px(22)
        text-align left
        i
            font-size px(18)

.player-search
    margin()
    margin-top $top
    width 16.8rem
    height: 1.7rem;
    display: flex

    #ids
        flex 1
        text-indent: 0.3rem;
        color: rgba(51, 51, 51, 1);
        font-size px(14)
        background-color: rgba(255, 255, 255, 1);
        text-align: left;
    #search
        flex 0 0 2.3rem
        width: 2.3rem;
        font-size px(14)
        color: rgba(255, 255, 255, 1);
        background-color: rgba(0, 186, 173, 1);

.player-info
    overflow: hidden
    margin()
    padding-bottom 0.5rem
    margin-top 1.1rem
    width 17.3rem
    text-align left
    > div:nth-child(odd)
        margin-right px(8)
    > div:nth-child(1),
    > div:nth-child(2)
        margin-top 0

.player-main
    float: left

    margin-top 0.5rem
    width: 8.45rem;
    height: 11.7rem;
    background: white

    img
        width: 8.45rem;
        height: 8.35rem;

.player-item
    padding 0 px(6) 0 px(16)

.player-item p.middle
    i.iconfont
        width: 1.2rem;
        height: 1.2rem;
        font-size: 1.2rem;
        color: rgba(153, 153, 153, 1);

    i:nth-of-type(2)
        margin-left 0.3rem !important

    span
        width: 3.5rem;
        left: px(66);
        top: px(453);
        color: rgba(80, 80, 80, 1);
        font-size: px(14);
        line-height: 150%;
        text-align: left;
    span.inblock
        width $width
        inblock()

p.end
    float left
    margin-top 0.5rem
    width 100%
    height: 1.05rem;
    line-height: 1.05rem;
    text-align center
    color: rgba(80, 80, 80, 1);