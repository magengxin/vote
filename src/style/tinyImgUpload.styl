#img-container {

}
#img-container:after {
    content: '.';
    display: block;
    height: 0;
    visibility: hidden;
    overflow: hidden;
    clear: both;
}
.img-item {
    position: relative;
    margin 0.5rem 0 0
    box-sizing: border-box;
    border-radius: 0.5rem;
    overflow: hidden
}
.img-thumb {
    //border: 1px solid #000;
}
.thumb-icon {
    width: 100%;
    height: 100%;
}
.img-up-add {
    display: table;
    //border: 1px dashed #E0E0E0;
}
.img-add-icon {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
}
.img-remove {
    position: absolute;
    right: 0;
    top: 0;
    display: block;
    width 1.5rem
    height 1.5rem
    border-radius: 50%;
    background: white;
    color: red;
    text-align: center;
    text-decoration: none;
    font-size: 1.0rem
    overflow: hidden;
    background-clip: padding-box;
}
#img-file-input {
    display: none;
}