@import "common/common.styl"
@import "common/footer.styl"

a
    text-decoration none
    color black

a.btn
    display: inline-block
    text-decoration: none
    text-align: center

$top = px(10)
.view-index
    position: relative
    width 100%

    padding-bottom px(60)

    .section
        margin()
        width: 17.25rem;
        font-size px(14)
        text-align: center;

        h2
            margin $top auto 0
            padding: px(10)
            width: px(292);

            font-size: 0.7rem;
            line-height: px(20);
            color rgba(0, 0, 0, 1)
            text-align center
            font-weight bold

        .vote-info
            div
                display: flex
                width: 100%
                height 3.25rem

                padding 0.3rem 0 0.25rem
                background: rgba(0, 186, 173, 1)

                div
                    width: 33.333%
                    height: 2.1rem
                    line-height 1.0rem
                    overflow hidden

                    color: rgba(255, 255, 255, 1);
            > p.info-time
                background: white
                height 1.5rem
                line-height 1.5rem
                i
                    color: rgba(153, 153, 153, 1)
                span
                    color: rgba(212, 48, 48, 1)

        .vote-title
            margin-top 0.4rem

            width: 17.25rem;
            height: 1.95rem;
            line-height 1.95rem
            color: rgba(255, 255, 255, 1);
            text-align: center;

            background-color: rgba(0, 186, 173, 1);
            h3
                color white
                font-weight 400
                font-size px(14)

        ul.vote-list > li.vote-item:nth-of-type(1) small
            background-color: rgba(212, 48, 48, 1);

        ul.vote-list > li.vote-item:nth-of-type(2) small
            background-color: rgba(0, 186, 173, 1);

        ul.vote-list > li.vote-item:nth-of-type(3) small
            background-color: rgba(0, 0, 0, 1);

        ul.vote-list > li.vote-item
            display flex
            align-items center
            position: relative

            overflow hidden
            padding 0 0.7rem

            height: 3.5rem

            text-align left
            font-size: 0.8rem;
            color: rgba(80, 80, 80, 1);
            &:after
                content: ''
                position: absolute
                left: 0;
                right: 0;
                bottom: 0
                margin 0 auto
                width: 90%
                height: px(1)
                background rgba(188, 187, 193, 1)

            > small
                width 0.8rem
                height 0.8rem
                color: rgba(255, 255, 255, 1);
                background-color: blue
                border-radius: 100%;
                line-height: 0.85rem;
                text-align: center;
            img
                margin 0 0.5rem
                width: 2.1rem;
                height: 2.1rem;
        .vote-item-word
            width: 10.8rem;
            p
                nowrap()
                overflow hidden
                margin-top 0.2rem
                width: 10.8rem;
                line-height 1rem
                letter-spacing: 0;
                color: rgba(140, 140, 140, 1);
                font-size: 0.6rem;
            span:first-child
                nowrap()
                float left
                width: 7.5rem;
                letter-spacing: 0;
                color: rgba(0, 0, 0, 1);
                font-size: 0.7rem;
            span:last-child
                float right
                width: 2.0rem
                letter-spacing: 0;
                color: rgba(212, 48, 48, 1);

        p.end
            margin-top 0.5rem
            line-height: 1.05rem;
            color: rgba(80, 80, 80, 1);
