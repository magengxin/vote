@import "common/common.styl"
@import "common/footer.styl"

a 
    text-decoration none
    color black

a.btn
    display: inline-block
    text-decoration: none
    text-align: center

$top = px(10)
.view-index
    position: relative
    width 100%

    padding-bottom px(60)

.section
    font-size px(14)

    h2
        margin $top auto 0
        padding: px(10)
        width: px(292);

        font-size: 0.7rem;
        line-height: px(20);
        color rgba(0, 0, 0, 1)
        text-align center
        font-weight bold

.activity
    margin()
    margin-top $top
    padding 0.3rem 1.2rem
    overflow hidden
    width: 17.25rem;
    color: rgba(80, 80, 80, 1);
    background-color: rgba(255, 255, 255, 1);
    p
        text-align left
        line-height px(22)
.sign-form
    margin()
    margin-top 0.8rem
    padding 0.8rem 1.2rem

    width: 17.25rem;
    background-color: rgba(255, 255, 255, 1);

.form-group .form-control
    padding px(4) 0
    small
        width: 0.3rem;
        height: 1.05rem;
        color: rgba(212, 48, 48, 1);
    label
        width: 1.4rem;
        height: 1.05rem;
        color: rgba(80, 80, 80, 1);
    input
        width: 14.6rem;
        height: 1.5rem;
        text-indent: 0.3rem;
        color: rgba(51, 51, 51, 1);
        border-radius: 0.1rem;
        font-size: 0.6rem;
        border: rgba(153, 153, 153, 1) solid 0.05rem;
    textarea
        text-indent 0.3rem
        font-size: 0.6rem;
    a#file
        position: relative
        display block
        width: 7.75rem;
        height: 1.5rem;
        line-height 1.5rem
        color: rgba(255, 255, 255, 1);
        background-color: rgba(0, 186, 173, 1);
        box-shadow: rgba(128, 128, 128, 1) solid 0.05rem;
        border-radius: 0.25rem;
        padding-left px(10)

        input[type='file']
            position: absolute
            left: 0
            top: 0
            width: 7.75rem;
            height: 1.5rem;
    .imgs
        border 0.2rem solid transparent
        img
            margin-top 0.2rem
            border-radius 0.5rem

.form-submit
    display block
    margin()
    margin-top 0.5rem
    width: 17.25rem;
    height: 2.2rem;

    line-height 2.2rem
    text-align: center;

    background-color: rgba(0, 186, 173, 1);
    border-radius: 0.25rem;

    color: rgba(255, 255, 255, 1);