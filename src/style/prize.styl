@import "common/common.styl"
@import "common/footer.styl"

a 
    text-decoration none
    color black

a.btn
    display: inline-block
    text-decoration: none
    text-align: center

.swiper-container
    width: 18.75rem;
    height: 8.7rem;
    img
        width 100%
        height 100%

    .swiper-pagination.swiper-pagination-bullets
        bottom:px(4)
        .swiper-pagination-bullet.swiper-pagination-bullet-active
            background white

$top = px(10)
$width = px(160)
.view-index
    position: relative
    width 100%

    padding-bottom px(60)

    .section
        font-size px(14)

        > p
            height: px(24)
            line-height: px(24)
            font-size px(14)
            text-align center
            color: rgba(255, 255, 255, 1);
            background-color: rgba(0, 0, 0, 1);

        h2
            margin $top auto 0
            padding: px(10)
            width: px(292);

            font-size: 0.7rem;
            line-height: px(20);
            color rgba(0, 0, 0, 1)
            text-align center
            font-weight bold

        .activity 
            margin()
            margin-top $top
            padding 0.3rem 1.2rem
            overflow hidden
            width: 17.25rem;
            color: rgba(80, 80, 80, 1);
            background-color: rgba(255, 255, 255, 1);
            p
                text-align left

        .activity-info
            margin()
            margin-top 1.0rem
            padding 0.7rem 1.3rem

            width: 17.25rem;
            background-color: rgba(255, 255, 255, 1);

            h3
                color: rgba(0, 186, 173, 1);
                font-size: 0.9rem;
                font-weight: bold;
                text-align left

            p
                margin-top 0.7rem
                span:first-child
                    width: 3.5rem;
                    color: rgba(80, 80, 80, 1);
                span:last-child
                    color: rgba(212, 48, 48, 1);
                    font-weight: bold;
                span.inblock
                    width $width
                    inblock()
            img
                margin-top 0.2rem
                width: 15.4rem;
                height: 8.75rem;
